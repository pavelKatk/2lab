<html>
<body>
<div>
    <form action ="/main" method="post">
        <input type="text" name = "name" placeholder="Название фильма" />
        <input type="text" name="genre" placeholder="Жанр">
        <input type="number" name = "year" placeholder="Год">
        <input type="text" name="country" placeholder="Страна">
        <input type ="number" name = "duration" placeholder="Продожительность">
        <input type ="number" name = "audience" placeholder="Аудитория">
        <input type ="number" step="any" name = "rating" placeholder="Рейтинг">
        <input type ="number" step="any" name = "fees" placeholder="Сборы (в мире)">
        <button type="submit"> Добавить </button>
    </form>
</div>
<div>Список фильмов: </div>
{{#movies}}
    <div>
        <b>{{id}}</b>
        <span>{{name}}</span>
        <span>{{country}}</span>
        <b>{{year}}</b>
        <span>{{genre}}</span>
        <b>{{duration}}</b>
    </div>
{{/movies}}

{{#rating}}
    <div>
        <b>{{id}}</b>
        <span>{{audience}}</span>
        <span>{{rating}}</span>
        <b>{{fees}}</b>
    </div>
{{/rating}}
</body>
</html>